{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

{% include "./header.html.twig" %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

<div class="maincontainer">
<div class="sidenav">
  <div class="login-text">
    <h2>Connexion</h2>
    <p>Connectez ou inscrivez vous pour acc√©der au site.</p>
  </div>
</div>

<div class="main">
  <div class="col-md-6 col-sm-12">
    <div class="login-form">
        <form method="post">
          {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
          {% endif %}

          <div class="form-group">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" placeholder="Email" required autofocus>
          </div>
          <div class="form-group">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" autocomplete="current-password" placeholder="Mot de passe" required>
          </div>
          <div class="form-group">
            <input type="hidden" name="_csrf_token"
              value="{{ csrf_token('authenticate') }}"
            >
          </div>

          <button type="submit" class="btn btn-secondary bg-dark">Connexion</button>
          <a href="{{ path('app_register') }}"> S'inscrire </a>
          

        </form>
    </div>
  </div>
</div>
</div>

{% endblock %}


{% block stylesheets %}
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

   <style>
    .maincontainer{
      width: 100%;
      height: 94vh;
      display: flex;
    }

    .sidenav{
      width: 40%;
      background-color: #000;
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .sidenav h2{
      font-size: 45px;
    }

    .sidenav p{
      font-size: 18px;
    }

    .main{
      width: 60%;
    }

    .form-group{
      display: flex;
      flex-direction: column;
      width: 250px;
      padding-bottom: 10px;
    }

    .form-group label{
      padding-bottom: 5px;
      font-size: 25px;
    }

    .form-group input{
      outline: none;
      border: 2px solid #000;
      border-radius: 5px;
      padding-left: 10px;
      height: 45px;
    }

    .login-form{
      margin-top: 30vh;
      margin-left: 150px;
    }

    .login-form a{
      text-decoration: none;
      color: #fff;
      background-color: #696969;
      padding: 10px;
      border-radius: 5px;
    }

   </style>
{% endblock %}